<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/characterListFragment">

    <fragment
        android:id="@+id/characterListFragment"
        android:name="com.yeray_yas.marvelsuperheroes.presentation.superheroes.list.CharacterListFragment"
        android:label="Marvel Superheroes"
        tools:layout="@layout/activity_character_list">
        <action
            android:id="@+id/action_characterListFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.yeray_yas.marvelsuperheroes.presentation.superheroes.detail.CharacterDetailFragment"
        android:label="Superhero details"
        tools:layout="@layout/activity_character_details">


        <argument
            android:name="characterId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
</navigation>